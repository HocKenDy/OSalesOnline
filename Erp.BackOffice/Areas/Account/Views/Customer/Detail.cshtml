                                </div>
                                <div class="row control-group">
                                    @Html.DetailViewItemFor2(model => model.DistrictName, null, null, "col-sm-3", "col-sm-9")
                                </div>
                                <div class="row control-group">
                                    @Html.DetailViewItemFor2(model => model.ProvinceName, null, null, "col-sm-3", "col-sm-9")
                                </div>
