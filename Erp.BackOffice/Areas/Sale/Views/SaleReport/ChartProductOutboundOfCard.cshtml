        console.log(productOutboundChart);
             setTimeout(function() {
                 for (var i in arrayDatasetOut) {
                     pieChartOutboundCardData.datasets.push(arrayDatasetOut[i]);
                }
                 productOutboundChart.update();
                //console.log('updated')
        }, 500);
        console.log("pieChart");
        console.log(pieChartOutboundCardData);
     });
</script>